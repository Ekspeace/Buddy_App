<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbuddy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_edit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />
        <include
            android:id="@+id/ProgressBar_pickUps_edit"
            layout="@layout/progressbar"
            android:visibility="gone"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/buddy_logo" />

                <LinearLayout
                    android:id="@+id/layout_edit_cannabis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/cannabis_spinner_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:id="@+id/layout_range_cannabis_edit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="That Will Start From : "
                            android:textColor="@color/colorPrimaryLight"
                            />
                        <TextView
                            android:id="@+id/range_price_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryLight"
                            />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/price_pay_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/input_design"
                        android:hint="Price Willing To Pay"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textColorHint="@color/colorPrimaryLight"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_grocery_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/grocery_store_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_design"
                        android:hint="Please Provide A Store"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textColorHint="@color/colorPrimaryLight"
                        />
                    <EditText
                        android:id="@+id/grocery_list_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/input_design"
                        android:gravity="top"
                        android:hint="Provide A Grocery List"
                        android:lines="7"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textColorHint="@color/colorPrimaryLight"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_other_pickups_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/other_pickups_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_design"
                        android:hint="Provide Your Pick Up Type"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textColorHint="@color/colorPrimaryLight"
                        />
                    <EditText
                        android:id="@+id/other_piokup_more_info_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/input_design"
                        android:gravity="top"
                        android:hint="Provide Additional Information About The Pick Up"
                        android:lines="7"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textColorHint="@color/colorPrimaryLight"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="2">
        <Button
            android:id="@+id/btn_update_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_buddy"
            android:enabled="false"
            android:fontFamily="serif"
            android:text="Update"/>


    </LinearLayout>

</RelativeLayout>