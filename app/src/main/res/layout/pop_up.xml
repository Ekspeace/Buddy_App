<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/pop_up_cardView"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/dialog_icon"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:tint="@color/colorPrimaryLight"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>


                <TextView
                    android:id="@+id/dialog_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="15dp"
                    android:id="@+id/Real_user_email_credential"
                    android:hint="Email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:inputType="textEmailAddress"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Real_user_password_credential"
                    android:textColorHint="@color/colorPrimaryLight"
                    android:hint="Password"
                    app:passwordToggleTint="@color/colorPrimaryLight"
                    android:layout_marginHorizontal="15dp"
                    android:visibility="gone"
                    app:passwordToggleEnabled="true"

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dialog_confirm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_buddy"
                        android:text="Confirm"
                        android:textColor="@color/colorPrimaryLight"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/dialog_close"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/input_design"
                        android:gravity="center"
                        android:text="Close"
                        android:textColor="@color/colorPrimaryLight"
                        android:visibility="gone" />
            </LinearLayout>
            <Button
                android:id="@+id/dialog_about_close"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_design"
                android:text="Close"
                android:textColor="@color/colorPrimaryLight"
                android:visibility="gone" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>